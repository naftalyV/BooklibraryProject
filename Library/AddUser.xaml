<Window x:Class="Library.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="חלון הרשמה" Height="600" Width="800">
    <Grid>
        <Button x:Name="btnNewRegister" Content="הרשמה" HorizontalAlignment="Left" Height="54" Margin="314,440,0,0" VerticalAlignment="Top" Width="130" Click="btnNewRegister_Click"/>


        <TextBox x:Name="textBoxFirstName" HorizontalAlignment="Left" Height="23" Margin="490,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxAdress" HorizontalAlignment="Left" Height="23" Margin="94,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxLastName" HorizontalAlignment="Left" Height="23" Margin="490,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxId" HorizontalAlignment="Left" Height="23" Margin="490,287,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxPassword" HorizontalAlignment="Left" Height="23" Margin="94,339,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxEmail" HorizontalAlignment="Left" Height="23" Margin="94,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxUserName" HorizontalAlignment="Left" Height="23" Margin="94,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="textBlockAdress" HorizontalAlignment="Left" Margin="257,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" TextAlignment="Right" RenderTransformOrigin="-0.583,1.378"><Run FlowDirection="RightToLeft" Text="כתובת"/></TextBlock>
        <TextBlock x:Name="textBlockFirstName" HorizontalAlignment="Left" Margin="639,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run FlowDirection="RightToLeft" Text="שם פרטי"/></TextBlock>
        <TextBlock x:Name="textBlockLastName" HorizontalAlignment="Left" Margin="632,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run FlowDirection="RightToLeft" Text="שם משפחה"/></TextBlock>
        <TextBlock x:Name="textBlockid" HorizontalAlignment="Left" Margin="633,287,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run FlowDirection="RightToLeft" Text="תעודת זהות"/></TextBlock>

        <TextBlock x:Name="textBlockUserName" HorizontalAlignment="Left" Margin="257,296,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run FlowDirection="RightToLeft" Text="שם משתמש"/></TextBlock>
        <TextBlock x:Name="textBlockPassword" HorizontalAlignment="Left" Margin="287,346,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run FlowDirection="RightToLeft" Text="סיסמא"/></TextBlock>
        <TextBlock x:Name="textBlockBirthDate" HorizontalAlignment="Left" Margin="639,333,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run FlowDirection="RightToLeft" Text="תאריך לידה"/></TextBlock>
        <TextBlock x:Name="textBlockTitle" HorizontalAlignment="Left" Height="45" Margin="205,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="337" TextAlignment="Center" Text="אנא הזן פרטים" FontWeight="Bold" FontSize="36"/>
        <TextBlock x:Name="textBlockEmail" HorizontalAlignment="Left" Margin="256,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run FlowDirection="RightToLeft" Text="כתובת אימיל"/></TextBlock>
        <ComboBox x:Name="comboBoxUserType" HorizontalAlignment="Left" Margin="94,390,0,0" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <DatePicker x:Name="datePickerBirthDate" HorizontalAlignment="Left" Margin="490,329,0,0" VerticalAlignment="Top" Width="120" SelectedDateFormat="Short" />
        <TextBlock x:Name="textBlockUserType" HorizontalAlignment="Left" Margin="251,396,0,0" TextWrapping="Wrap" Text=":סוג משתמש" VerticalAlignment="Top"/>

    </Grid>
</Window>
