<Window x:Class="Library.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="UserManagementWindow" Height="300" Width="1050">
    <Grid>
        <Button x:Name="btnShowAllUsers" Content="הצג את כל המשתמשים" HorizontalAlignment="Left" Height="75" Margin="786,92,0,0" VerticalAlignment="Top" Width="227" Click="btnShowAllUsers_Click"/>
        <DataGrid x:Name="dataGridUsers" HorizontalAlignment="Left" Margin="27,21,0,0" VerticalAlignment="Top" Width="741" Height="217" CanUserAddRows="false"/>
        <Button x:Name="AddNewUser" Content="משתמש חדש" HorizontalAlignment="Left" Height="44" Margin="786,21,0,0" VerticalAlignment="Top" Width="227" Click="AddNewUser_Click"/>
        <Button x:Name="btnRemoveUser" Content="מחיקת משתמש" HorizontalAlignment="Left" Height="44" Margin="786,194,0,0" VerticalAlignment="Top" Width="227" Click="btnRemoveUser_Click"/>

    </Grid>
</Window>
