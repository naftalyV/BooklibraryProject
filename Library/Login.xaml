<Window x:Class="Library.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="500" WindowStyle="ToolWindow" Visibility="Visible">
    <Grid x:Name="LoginWindo">
        <Button x:Name="LoginBtn" Content="אישור" HorizontalAlignment="Left" Margin="167,307,0,0" VerticalAlignment="Top" Width="86" Click="LoginBtn_Click"/>
        <TextBlock x:Name="UserBlock" HorizontalAlignment="Left" Margin="278,239,0,0" TextWrapping="Wrap" Text=":שם משתמש" VerticalAlignment="Top"/>
        <TextBox x:Name="UserBox" HorizontalAlignment="Left" Height="18" Margin="133,239,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="138"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="133,272,0,0" VerticalAlignment="Top" Width="138"/>
        <TextBlock x:Name="PasswordBlock" HorizontalAlignment="Left" Margin="295,274,0,0" TextWrapping="Wrap" Text=":סיסמא" VerticalAlignment="Top"/>
        <TextBlock x:Name="titleBlock" HorizontalAlignment="Left" Margin="53,41,0,0" TextWrapping="Wrap" Text="ברוכים הבאים לספריה
" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" TextDecorations="{x:Null}"/>
        <TextBlock x:Name="AccessBlock" HorizontalAlignment="Left" Margin="85,145,0,0" TextWrapping="Wrap" Text="אנא הזן שם משתמש וסיסמא" VerticalAlignment="Top" RenderTransformOrigin="0.132,0.405" FontSize="24"/>
        <Button x:Name="btnRegister" Content="משתמש חדש" HorizontalAlignment="Left" Margin="167,363,0,0" VerticalAlignment="Top" Width="86" RenderTransformOrigin="-0.267,-0.25" Click="btnRegister_Click_1"/>

    </Grid>
</Window>
